{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "arrowFunctions": true,
    "templateStrings": true,
    "classes": true,
    "modules": true,
    "restParams": true,
    "jsx": true
  },

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "globals": {
    "BROWSER": true
  },

  "rules": {
    "quotes": 0,
    "no-trailing-spaces": 0,
    "no-unused-vars": 0,
    "no-alert": 0,
    "strict": 0
  }
}